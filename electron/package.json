{
    "name": "triageflow",
    "version": "1.0.0",
    "main": "main.js",
    "scripts": {
        "start": "NODE_ENV=development electron .",
        "build": "electron-builder"
    },
    "build": {
        "appId": "com.triageflow.app",
        "productName": "TriageFlow",
        "files": [
            "main.js"
        ],
        "extraResources": [
            {
                "from": "../server",
                "to": "server",
                "filter": [
                    "**/*"
                ]
            },
            {
                "from": "../server/node_modules",
                "to": "server/node_modules",
                "filter": [
                    "**/*"
                ]
            },
            {
                "from": "../client/dist",
                "to": "client/dist",
                "filter": [
                    "**/*"
                ]
            }
        ],
        "win": {
            "target": "nsis",
            "icon": "icon.ico"
        },
        "mac": {
            "target": "dmg"
        }
    },
    "devDependencies": {
        "electron": "latest",
        "electron-builder": "latest"
    }
}